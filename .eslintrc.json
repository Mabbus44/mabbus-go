{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "linebreak-style": ["error", "windows"],
    "max-len": ["off"],
    "no-restricted-globals": ["error", "name", "length", "event"],
    "no-restricted-syntax": ["error", "FunctionExpression", "WithStatement"],
    "no-plusplus": "off",
    "no-console": "off",
    "guard-for-in": "off",
    "import/prefer-default-export": "off",
    "operator-linebreak": "off",
    "no-param-reassign": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
